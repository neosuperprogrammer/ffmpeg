<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="36dp"
	android:orientation="vertical"
	android:background="@drawable/playtime_player_video">
	<FrameLayout
		android:layout_width="fill_parent"
		android:layout_height="36dp"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/playtime_text_curtime"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="left|center_vertical"
			android:layout_marginLeft="9.6dp"
			android:gravity="left|center_vertical"	
			android:text="00:00"
			android:textColor="@color/color_b2b2cf"
			android:textSize="@dimen/font_17_pt"/>
		<FrameLayout
			android:id="@+id/mediactl_progress"
			android:layout_width="443.3dp"
			android:layout_height="16.6dp"
			android:layout_gravity="center"/>
		<TextView
			android:id="@+id/playtime_text_totaltime"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="right|center_vertical"
			android:layout_marginRight="9.6dp"
			android:gravity="right|center_vertical"
			android:text="00:00"
			android:textColor="@color/color_b2b2cf"
			android:textSize="@dimen/font_17_pt"/>
	</FrameLayout>
</FrameLayout>
